<section class="mt-32 mx-auto flex flex-col justify-center items-center text-center text-primary">
    <h2 class="uppercase text-5xl font-semibold">
        4 de marzo
        <span aria-hidden class="hidden md:inline mx-2">·</span><br aria-hidden class="block md:hidden" />
        <span>
            <script is:inline>
                const END_DATE = 1741114800000 // 4 de Marzo 2024 TIMESTAMP
                const d = new Date(END_DATE)
                const date = d.toLocaleTimeString('es-ES', {
                    hour: '2-digit',
                    minute: '2-digit'    
                })
                const tzOffset = d.getTimezoneOffset() / 60
                const diff = tzOffset * -1
                const gmt = diff > 0 ? `GMT+${diff}` : `GMT-${Math.abs(diff)}` 

                const TZ_DICTIONARY = {
                    'GMT+1': 'CET',
                }

                const tz = TZ_DICTIONARY[gmt] ?? gmt
                const selfScript = document.currentScript
                selfScript.parentNode.innerHTML = `${date}H ${tz}`
            </script>
        </span>
    </h2>

    <h3 class="text-2xl font-medium flex max-w-sm fle-col mt-6 uppercase">
